<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wyj.com.androidvip.live.LiveInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#ec3232">

        <ImageView
            android:id="@+id/activity_live_img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/base_back_left" />

        <TextView
            android:id="@+id/activity_live_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/activity_live_img_back"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="标题"
            android:textColor="#fff"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/activity_live_jcv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:text="视频简介："
        android:textColor="#ed5050"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/activity_live_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:padding="@dimen/dp_5"
        android:text="简介"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="视频列表："
        android:textColor="#ed5050"
        android:textSize="@dimen/sp_20" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_live_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
