<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wyj.com.androidvip.activity.HomeActivity">

    <!--android:background="@drawable/log_register"-->
    <!--android:alpha="0.7"-->
    <TextView
        android:id="@+id/activity_home_top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ec3232"
        android:textColor="#fff"
        android:textSize="@dimen/sp_20"
        android:padding="@dimen/dp_5"/>
    <LinearLayout
        android:id="@+id/activity_home_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_home_index"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_home_img_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/index_no"/>
            <TextView
                android:id="@+id/activity_home_txt_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_home_study"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_home_img_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/study_no"/>
            <TextView
                android:id="@+id/activity_home_txt_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="学习"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_home_live"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_home_img_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/live_no"/>
            <TextView
                android:id="@+id/activity_home_txt_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="视频"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_home_gan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_home_img_gan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gan_no"/>
            <TextView
                android:id="@+id/activity_home_txt_gan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="经典"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_home_account"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_home_img_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/account_no"/>
            <TextView
                android:id="@+id/activity_home_txt_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/activity_home_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_above="@id/activity_home_bottom"
        android:layout_below="@id/activity_home_top">
    </FrameLayout>
</RelativeLayout>
