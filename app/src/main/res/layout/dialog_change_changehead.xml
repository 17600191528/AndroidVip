<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/dialog_changehead_takephotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照"/>
    <Button
        android:id="@+id/dialog_changehead_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册选择"/>
    <Button
        android:id="@+id/dialog_changehead_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="推荐"/>
    <Button
        android:id="@+id/dialog_changehead_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"/>

</LinearLayout>